{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "program": "${workspaceFolder}/dist/app.js",
      "preLaunchTask": "npm: build",
      "console": "integratedTerminal"
    }
  ]
}